<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/soft"
    tools:context=".IndividualJobWindow">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:background="#20FFFFFF"
        android:backgroundTint="#20FFFFFF"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingLeft="30dp"
        android:paddingTop="20dp"
        android:paddingRight="30dp"
        android:paddingBottom="20dp">

        <TextView
            android:id="@+id/txtIndvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:text="TextView"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/txtIndvDesc"
            android:layout_width="match_parent"
            android:scrollbars="vertical"
            android:layout_height="500dp"
            android:layout_marginBottom="10dp"
            android:textColor="#FFFFFF"
            android:text="TextView"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btnCompareSkills"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:backgroundTint="#e4314e"
            android:text="Compare Job With Top Skills" />

    </LinearLayout>

</LinearLayout>